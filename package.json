{
  "name": "openlmis-functional-tests",
  "version": "1.0.0",
  "description": "OpenLMIS Functional Tests - based on cucumber-boilerplate project",
  "homepage": "https://github.com/OpenLMIS/openlmis-functional-tests",
  "scripts": {
    "clean": "rm -Rf ./build",
    "local-webserver": "forever start -s ./node_modules/.bin/http-server ./demo-app -s",
    "test": "npm run test:validate && npm run test:features",
    "test:features": "npm run local-webserver & (wdio wdio.conf.js; wdio_ret=$?; forever stopall; exit $wdio_ret)",
    "test:validate": "eslint 'src/**/*.js' 'test/**/*.js!(setup.js)'",
    "performance-report": "node htmlify-csv convert build/performanceResults/StepPerformanceResults.csv --output=build/performanceResults/StepPerformanceResults.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenLMIS/openlmis-functional-tests"
  },
  "keywords": [
    "webdriverio",
    "cucumber",
    "test",
    "selenium",
    "openlmis"
  ],
  "license": "AGPL-3.0",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.12.7",
    "@babel/register": "^7.9.0",
    "@types/cucumber": "^6.0.1",
    "@wdio/cli": "^6.0.8",
    "@wdio/config": "^6.0.8",
    "@wdio/cucumber-framework": "^6.0.8",
    "@wdio/devtools-service": "^6.3.7",
    "@wdio/junit-reporter": "^6.3.6",
    "@wdio/local-runner": "^6.0.8",
    "@wdio/mocha-framework": "^6.1.8",
    "@wdio/selenium-standalone-service": "^6.0.8",
    "@wdio/spec-reporter": "^6.0.8",
    "@wdio/static-server-service": "^6.0.8",
    "@wdio/sync": "^6.0.8",
    "caporal": "^1.4.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "find-process": "^1.1.0",
    "forever": "~0.15.3",
    "glob": "^7.1.2",
    "http-server": "^0.12.1",
    "papaparse": "^5.3.0",
    "record-screen": "^3.5.0",
    "request": "^2.81.0",
    "tablesorter": "^2.31.3",
    "wdio-phantomjs-service": "~0.2.2",
    "webdriverio": "^6.1.12",
    "yarn": "^1.22.10"
  }
}
